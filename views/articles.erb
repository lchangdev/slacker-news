<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>Slacker News</title>
        <link rel="stylesheet" href="styles.css">
    </head>

    <body>
        <div class = "body-container">

<!-- Header -->

            <div class = "header-container">
                <div id = "logo">
                    <img src="server.gif">
                </div>
                <div id = "name">
                    <table>
                        <td><a href="/" class="name-link">Hacker News<a></td>
                    </table>
                </div>
                <div id = "nav-bar">
                    <table>
                        <td><a href="#" class="nav-btn">new</a> | </td>
                        <td><a href="#" class="nav-btn">comments</a> | </td>
                        <td><a href="#" class="nav-btn">ask</a> | </td>
                        <td><a href="#" class="nav-btn">jobs</a> | </td>
                        <td><a href="/articles" class="nav-btn">submit</a></td>
                    </table>
                </div>
                <div id = "login">
                    <table>
                        <td><a class="login-link" href="#">login</a></td>
                    </table>
                </div>
            </div>

<!-- Form -->

            <div id = "form-container">
                <h3>Post your articles here</h3>
                <form name="submit" class="form" action="/articles" onsubmit="return validateForm()" method="post">
                    <label for="title">Title:</label>
                    <input type="text" id="title" name="title" placeholder="title" required/>
                    <br>
                    <br>
                    <label for="url">URL:</label>
                    <input type="text" id="url" name="url" placeholder="http://www.example.com" required/>
                    <br>
                    <br>
                    <label for="title">Description:</label>
                    <input type="text" id="description" name="description" placeholder="description of your page here" pattern=".{20,}" required title="20 characters minimum"/>
                    <br>
                    <br>
                    <input type="submit"/>
                </form>
            </div>

<!-- Footer -->

            <footer>
                <div class = "footer-container">
                    <table>
                        <td><a href="#" class="nav-btn">Lists</a> | </td>
                        <td><a href="#" class="nav-btn">RSS</a> | </td>
                        <td><a href="#" class="nav-btn">Bookmarklet</a> | </td>
                        <td><a href="#" class="nav-btn">Guidelines</a> | </td>
                        <td><a href="#" class="nav-btn">FAQ</a></td>
                        <td><a href="#" class="nav-btn">DMCA</a> | </td>
                        <td><a href="#" class="nav-btn">News news</a> | </td>
                        <td><a href="#" class="nav-btn">Feature Requests</a> | </td>
                        <td><a href="#" class="nav-btn">Bugs</a> | </td>
                        <td><a href="#" class="nav-btn">Y Combinator</a></td>
                        <td><a href="#" class="nav-btn">Apply</a> | </td>
                        <td><a href="#" class="nav-btn">Library</a></td>
                    </table>
                    <form class="search">
                      <label >Search:</label>
                      <input type="search" name="search">
                    </form>
                </div>
            </footer>
        </div>

    </body>
</html>


